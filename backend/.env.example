# 环境配置
NODE_ENV=development
PORT=3000

# MySQL数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=miner_game
DB_USER=root
DB_PASSWORD=password
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_ACQUIRE_TIMEOUT=60000
DB_IDLE_TIMEOUT=10000

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CONNECT_TIMEOUT=10000

# JWT配置
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 游戏配置
ENERGY_RECOVERY_INTERVAL=300000  # 5分钟恢复1点精力
AUTO_MINING_INTERVAL=10000       # 10秒自动挖矿间隔
MAX_OFFLINE_HOURS=24             # 最大离线挖矿时间
MAX_ENERGY=100                   # 最大精力值
INITIAL_ENERGY=50                # 初始精力值
INITIAL_COINS=100                # 初始金币

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000         # 15分钟
RATE_LIMIT_MAX=100               # 最大请求数
CORS_ORIGIN=http://localhost:3000

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Swagger配置
SWAGGER_TITLE=挖矿游戏API文档
SWAGGER_DESCRIPTION=挖矿游戏后端API接口文档
SWAGGER_VERSION=1.0.0
SWAGGER_BASE_URL=/api

# Socket.IO配置
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000